<UserControl
    x:Class="RCG.WPF.Views.LoginView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:components="clr-namespace:PasswordBoxMVVM.Components;assembly=PasswordBoxMVVM"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:RCG.WPF.Views"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="560"
    d:DesignWidth="1272"
    FontSize="20"
    mc:Ignorable="d">
    <UserControl.Resources>
        <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter" />
    </UserControl.Resources>


    <Grid ShowGridLines="True">
        <Grid.ColumnDefinitions>
            <ColumnDefinition></ColumnDefinition>
            <ColumnDefinition></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition></RowDefinition>
        </Grid.RowDefinitions>
        <Image Source="/Resources/images/Login-box-bg.png" Grid.Row="0" Grid.Column="0" VerticalAlignment="Center" HorizontalAlignment="Center" Stretch="Fill"></Image>

        <Grid Grid.Row="0" Grid.Column="1" Margin="35 100 35 20">
            <Grid.RowDefinitions>
                <RowDefinition Height="auto" />
                <RowDefinition Height="auto" />
                <RowDefinition Height="auto" />
                <RowDefinition Height="auto" />
                <RowDefinition Height="auto" />
                <RowDefinition Height="auto" />
                <RowDefinition Height="auto" />
            </Grid.RowDefinitions>

            <TextBlock Grid.Column="1"
                HorizontalAlignment="Left"
                FontSize="20" FontWeight="Bold"
                Text="Login" />
            <TextBlock Grid.Row="1" Text="Username" Margin="0 20 0 0" FontSize="18"/>
            <TextBox Grid.Row="2" Margin="0 10 0 0"
                        Text="{Binding Username, UpdateSourceTrigger=PropertyChanged}" />
            <TextBlock Grid.Row="3" Text="Password" Margin="0 15 0 0" FontSize="18"/>
            <components:BindablePasswordBox  Grid.Row="4" Margin="0 10 0 0"
                        Password="{Binding Password}" />

            <Button Grid.Row="5"
                    HorizontalAlignment="Right" HorizontalContentAlignment="Center" VerticalContentAlignment="Center"
                    Command="{Binding LoginCommand}"
                    Content="Login"  Margin="0 10 0 0"
                    IsDefault="True"/>

            <TextBlock Grid.Row="6"
                    HorizontalAlignment="Center"
                    DataContext="{Binding ErrorMessageViewModel}"
                    Foreground="DarkRed"
                    Text="{Binding Message}"
                    Visibility="{Binding HasMessage, Converter={StaticResource BooleanToVisibilityConverter}}" />

        </Grid>
    </Grid>
</UserControl>
