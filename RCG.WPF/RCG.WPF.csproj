		<Resource Include="Resources\Images\settings.png" />
		<Resource Include="Resources\Images\user.png" />
		<Resource Include="Resources\Images\white-close.png" />
		<Resource Include="Resources\Images\white-line.png" />
		<Resource Include="Resources\Images\white-rectangle.png" />
	</ItemGroup>
	<Target Name="PublishFrontend" AfterTargets="ComputeFilesToPublish">
		<ItemGroup>
			<DistFiles Include="AppData\Logs\**" />
			<ResolvedFileToPublish Include="@(DistFiles->'%(FullPath)')" Exclude="@(ResolvedFileToPublish)">
				<RelativePath>%(DistFiles.Identity)</RelativePath>
				<CopyToPublishDirectory>PreserveNewest</CopyToPublishDirectory>
				<ExcludeFromSingleFile>true</ExcludeFromSingleFile>
			</ResolvedFileToPublish>
		</ItemGroup>
	</Target>
</Project>
